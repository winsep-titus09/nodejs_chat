<header class="navbar">
    <div class="nav-left">
        <img class="logo" src="/img/logo.svg" alt="" onerror="this.style.display='none'" />
        <a class="brand" href="/">
            <%= brandName %>
        </a>
    </div>

    <div class="nav-right">
        <button class="btn ghost" id="themeToggle" aria-label="ﾄ雪ｻ品 giao di盻㌻">兼</button>

        <% if (user) { %>
            <span class="meta" style="margin-right:12px;">
                <%= user.name %>
            </span>
            <form id="logoutForm" style="display:inline;">
                <button class="btn small" type="submit">ﾄ斉ハg xu蘯･t</button>
            </form>
            <% } else { %>
                <a class="btn small" href="/login">ﾄ斉ハg nh蘯ｭp</a>
                <a class="btn small primary" href="/register">ﾄ斉ハg kﾃｽ</a>
                <% } %>
    </div>
</header>

<script>
    // x盻ｭ lﾃｽ logout nhanh (n蘯ｿu ﾄ疎ng ﾄ惰ハg nh蘯ｭp)
    const form = document.getElementById('logoutForm');
    if (form) {
        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            const r = await fetch('/api/auth/logout', { method: 'POST' });
            if (r.ok) { toast('ﾄ静｣ ﾄ惰ハg xu蘯･t'); location.href = '/login'; }
        });
    }
</script>